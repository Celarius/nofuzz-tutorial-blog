{
    "application": {
        "code": "Nofuzz-Tutorial-Blog",
        "name": "Nofuzz Tutorial Blog",
        "version": "1.0.0",
        "global": {
            "maintenance": false,
            "message": "We are in maintenance mode, back shortly",
            "environment": "DEV",
            "timezone": "Europe\/Stockholm"
        },
        "responses": {
            "compress": "false"
        }
    },
    "log": {
        "level": "error",
        "driver": "php",
        "drivers": {
            "file": {
                "file_path": "storage\/log",
                "file_format": "Y-m-d",
                "line_format": "[%datetime%] [%channel%] [%level_name%] %message% %context%",
                "line_datetime": "Y-m-d H:i:s.v e"
            },
            "php": {
                "line_format": "[%channel%] [%level_name%] %message%",
                "line_datetime": "Y-m-d H:i:s.v e"
            }
        }
    },
    "cache": {
        "driver": "Apcu",
        "options": {
        }
    },
    "connections": {
        "main": {
            "type": "Pdo",
            "driver": "mysql",
            "schema": "nf_blog",
            "host": "127.0.0.1",
            "port": 3306,
            "username": "root",
            "password": "****",
            "charset": "UTF8",
            "options": [
                {"ATTR_PERSISTENT": true},
                {"ATTR_ERRMODE": "ERRMODE_EXCEPTION"},
                {"ATTR_AUTOCOMMIT": false}
            ]
        }
    }
}